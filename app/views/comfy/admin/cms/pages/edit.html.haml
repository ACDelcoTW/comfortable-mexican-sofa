- content_for :right_column do
  .box.revisions
    = link_to t(".create_translation"), new_comfy_admin_cms_site_page_translation_path(@site, @page), class: "btn btn-secondary btn-block"

    - @page.translations.each do |translation|
      .btn-group.btn-group-sm

        - url = edit_comfy_admin_cms_site_page_translation_path(@site, @page, translation)
        = link_to "#{translation.label} (#{translation.locale})", url, class: "btn"

        - url = comfy_admin_cms_site_page_translation_path(@site, @page, translation)
        = link_to t(".revision.delete"), url, method: :delete, data: {confirm: t(".revision.confirm")}, class: "btn btn-danger"

.page-header
  = link_to t('.revision', count: @page.revisions.count), comfy_admin_cms_site_page_revisions_path(@site, @page), class: 'btn btn-info pull-right'
  %h2= t('.title')

= comfy_form_for @page, as: :page, url: {action: :update}, html: {multipart: true} do |form|
  = render form
